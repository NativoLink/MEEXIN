<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0097A7</item>
        <item name="colorPrimaryDark">#006064</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="navigationHeader">
        <item name="android:background">#0097A7</item>
    </style>

    <style name="listProductosV">
        <item name="android:fontFamily">Helvetica</item>
        <item name="android:textColor">#1b1b1b</item>
        <item name="android:background">#d6d6d6</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="itemList">
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#1b1b1b</item>
        <item name="android:background">#ffffff</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="textColorP">
        <item name="android:color">#434343</item>
        <item name="android:textColor">#3c3f41</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="login_fondo">
        <item name="android:background">#424242</item>
    </style>
    <style name="btnLogin">
        <item name="android:textColor">#fff</item>
    </style>
    <style name="btnGeneral">
        <item name="android:textColor">#fff</item>
        <item name="android:background">#0097A7</item>
        <item name="android:padding">6dp</item>
        <item name="android:radius">8dp</item>
    </style>
    <style name="btnGeneralX">
        <item name="android:textColor">#fff</item>
        <item name="android:background">#002a2e</item>
        <item name="android:padding">6dp</item>
    </style>
    <style name="edtLogin">
        <item name="android:background">#fff</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="VFondo">
        <item name="android:background">#424242</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
