<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/login_fondo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/etNombreV"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="42dp"
                    style="@style/inputSobreGris"
                    android:layout_margin="2dp"
                    android:hint="Nombre"
                    android:textAlignment="center"
                    android:background="@drawable/round_all" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="0dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/etApellidoV"
                    android:layout_below="@+id/etNombreV"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="39dp"
                    style="@style/inputSobreGris"
                    android:background="@drawable/round_all"
                    android:layout_margin="2dp"
                    android:hint="Apellido"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="0dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/etCedulaV"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="34dp"
                    style="@style/inputSobreGris"
                    android:background="@drawable/round_all"
                    android:layout_margin="2dp"
                    android:hint="Cedula"
                    android:textAlignment="center" />
            </TableRow>



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="0dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/etClaveV"
                    android:layout_below="@+id/etApellidoV"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="33dp"
                    style="@style/inputSobreGris"
                    android:background="@drawable/round_all"
                    android:layout_margin="2dp"
                    android:hint="Clave"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="0dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/etCorreoV"
                    android:layout_below="@+id/etClaveV"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="44dp"
                    style="@style/inputSobreGris"
                    android:background="@drawable/round_all"
                    android:layout_margin="2dp"
                    android:hint="Correo"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="0dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/etTelefonoV"
                    android:layout_margin="2dp"
                    style="@style/inputSobreGris"
                    android:background="@drawable/round_all"
                    android:hint="Telefono"
                    android:textAlignment="center" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="0dp"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registrar"
                    android:id="@+id/btnRegV"
                    android:layout_below="@+id/etTelefonoV"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/button_press"
                    style="@style/textSobreGris"
                    android:layout_margin="0dp" />
            </TableRow>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
